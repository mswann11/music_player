<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_item_layout"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/album_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_margin"
            android:layout_marginStart="@dimen/top_margin" />

        <TextView
            android:id="@+id/song_name_text_view"
            style="@style/SongTextView"
            android:layout_toEndOf="@id/album_icon"
            android:layout_toRightOf="@id/album_icon"
            android:paddingBottom="@dimen/elevation"
            android:paddingTop="@dimen/top_margin" />

        <TextView
            android:id="@+id/artist_text_view"
            style="@style/SongTextView"
            android:layout_below="@id/song_name_text_view"
            android:layout_toEndOf="@id/album_icon"
            android:layout_toRightOf="@id/album_icon"
            android:paddingBottom="@dimen/play_top_margin"
            android:paddingTop="@dimen/elevation" />

        <TextView
            style="@style/TextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/arrows" />
    </RelativeLayout>

</LinearLayout>